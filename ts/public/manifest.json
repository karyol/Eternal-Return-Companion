{
  "manifest_version": 1,
  "type": "WebApp",
  "meta": {
    "name": "Eternal Return Cobalt Companion",
    "author": "Baron Drakula",
    "version": "1.0.0",
    "minimum-overwolf-version": "0.160.0",
    "description": "Companion app for Eternal Return Cobalt Protocol mode",
    "dock_button_title": "ER Companion",
    "icon": "icons/IconMouseOver.png",
    "icon_gray": "icons/IconMouseNormal.png",
    "launcher_icon": "icons/desktop-icon.ico",
    "window_icon": "icons/IconMouseOver.png"
  },
  "permissions": [
    "Hotkeys",
    "GameInfo",
    "Web"
  ],
  "data": {
    "start_window": "background",
    "hotkeys": {
      "cobalt_showhide": {
        "title": "Show/Hide Window",
        "action-type": "toggle",
        "default": "Ctrl+X"
      }
    },
    "protocol_override_domains": {
      "googlesyndication": "http"
    },
    "externally_connectable": {
      "matches": [
        "https://dak.gg",
        "http://*.overwolf.com",
        "https://*.overwolf.com",
        "https://*.google-analytics.com",
        "http://*.google-analytics.com",
        "https://www.googleapis.com"
      ]
    },
    "force_browser": "user",
    "windows": {
      "background": {
        "file": "background.html",
        "background_optimization": false,
        "is_background_page": true
      },
      "in_game": {
        "file": "in_game.html",
        "in_game_only": true,
        "focus_game_takeover": "ReleaseOnHidden",
        "resizable": false,
        "transparent": true,
        "clickthrough": true,
        "override_on_update": true,
        "open_dev_tools": false,
        "size": {
          "width": 300,
          "height": 90
        },
        "start_position": {
          "top": 10,
          "left": 10
        }
      },
      "cobalt": {
        "file": "cobalt.html",
        "in_game_only": true,
        "focus_game_takeover": "ReleaseOnHidden",
        "focus_game_takeover_release_hotkey": "cobalt_showhide",
        "resizable": false,
        "transparent": true,
        "override_on_update": true,
        "clickthrough": true,
        "open_dev_tools": false,
        "size": {
          "width": 345,
          "height": 371
        },
        "max_size": {
          "width": 345,
          "height": 371
        },
        "min_size": {
          "width": 345,
          "height": 371
        }
      }
    },
    "game_targeting": {
      "type": "dedicated",
      "game_ids": [
        21672
      ]
    },
    "game_events": [
      21672
    ],
    "launch_events": [
      {
        "event": "GameLaunch",
        "event_data": {
          "game_ids": [
            21672
          ]
        },
        "start_minimized": true
      }
    ],
    "developer": {
      "enable_auto_refresh": true,
      "reload_delay": 1000,
      "filter": "*.*"
    }
  }
}
